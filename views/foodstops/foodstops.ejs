<div class="container">
  <div class="row my-flex-card">
    <% foodstops.forEach(function(foodstop){ %>
    <div class="col-sm-6">
      
        <div class="card mb-3" style="max-width: 100%;">
			<div class="row col-md-12">
          <div class="col-md-4 col-xs-12">
            <img src="<%= foodstop.image%>" class="card-img text-center" alt="..." />
          </div>
          <div class="col-md-8 d-flex">
            <div class="card-body flex-fill">
              <h5 class="card-title text-center f_detail" style="font-weight:bold;" ><%= foodstop.name %></h5>
              <p class="card-text">
                <h6 class ="text-center" style="font-family:Cinzel;font-size:18px">
					<b>Where :</b>  <%= foodstop.address %>
				</h6>
				<h5 class = "text-center f_detail">
					<b>Price :</b> &#2352 <%= foodstop.price %>
				</h5>
              </p>
              <div>
                <span class="badge label-primary float-right"
                  ><i class="fas fa-heart"></i> <%= foodstop.likes.length
                  %></span
                >
              </div>
				<a href="/foodstops/<%= foodstop._id %>" class="card-link f_detail">Read More</a>
            </div>
          </div>
			</div>
        </div>
      
    </div>
 
  <% }) %>
 </div>
  <a class="btn btn-primary" href="/">Back to Home</a>
</div>
